server {
    listen 443 ssl;

    root /var/www/wordpress;

    index  index.php index.html;

    server_name csaidi.42.fr;

	ssl_certificate /etc/ssl/certs/csaidi.42.fr.cert;
    ssl_certificate_key /etc/ssl/certs/csaidi.42.fr.key;
 
    ssl_protocols TLSv1.3;

    location / {
        try_files $uri $uri/ =404;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass wordpress:9000;
    }
}